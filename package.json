{
    "name": "trolly",
    "version": "0.3.4",
    "distTag": "pre",
    "description": "A starter kit to get you up and running with a bunch of awesome new front-end technologies using Babel, Webpack, Mocha, Chai, Karma, Isparta, and ESLint without any framework dependencies.",
    "scripts": {
        "precommit": "npm test && npm run build",
        "clean": "rimraf dist",
        "build": "npm run clean && set NODE_ENV=production && webpack --config ./__config__/webpack/webpack.production.config.js --progress --profile --colors",
        "coverage": "node_modules/.bin/babel-node node_modules/isparta/bin/isparta cover node_modules/mocha/bin/_mocha --report lcovonly -- -R spec",
        "coveralls": "npm run coverage && coveralls < coverage/lcov.info",
        "compile": "webpack",
        "test": "npm run test:server && npm run test:browser",
        "test:server": "mocha ./__tests__/server/**/*.spec.js  --recursive --compilers js:babel-core/register --reporter spec --timeout 15000 --bail --require ./__config__/bootstrap.js",       "test:browser": "./node_modules/.bin/karma start --single-run",
        "watch": "npm run test:server -- --watch",
        "lint": "eslint ./src/**/*.js",
        "lint:tests": "eslint ./__tests__/**/*.spec.js",
        "package:purge": "rm -rf node_modules",
        "package:reinstall": "npm run package:purge && npm install",
        "package:updates": "./node_modules/.bin/ncu",
        "package:upgrade": "npm run package:updates -u",
        "dev-server": "node __config__/webpack/webpack.server.config"
    },
    "repository": "trolly",
    "keywords": [
        "Webpack",
        "workflow",
        "boilerplate",
        "test",
        "node",
        "karma",
        "mocha",
        "chai",
        "eslint",
        "isparta",
        "es2015",
        "es6",
        "ES2015",
        "es6",
        "Babel",
        "Babel 6",
        "boilerplate",
        "scaffold",
        "template",
        "skeleton",
        "karma",
        "mocha",
        "istanbul",
        "chai",
        "sinon"
    ],
    "files": [
        "dist",
        "src"
    ],
    "devDependencies": {
        "babel-core": "^6.1.4",
        "babel-register": "^6.1.4",
        "babel-cli": "^6.1.4",
        "babel-loader": "^6.1.0",
        "babel-preset-stage-0": "^6.1.2",
        "babel-preset-es2015": "^6.1.4",
        "coveralls": "^2.11.4",
        "eslint": "^1.9.0",
        "isparta": "^3.5.3",
        "isparta-loader": "^1.0.0",
        "karma": "^0.13.15",
        "karma-cli": "^0.1.1",
        "karma-mocha": "^0.2.0",
        "karma-phantomjs-launcher": "^0.2.1",
        "karma-sinon-chai": "^1.0.0",
        "karma-spec-reporter": "0.0.22",
        "karma-webpack": "^1.7.0",
        "mocha": "^2.3.3",
        "mocha-lcov-reporter": "^1.0.0",
        "npm-check-updates": "^2.4.1",
        "phantomjs": "^1.9.18",
        "phantomjs-polyfill": "0.0.1",
        "sinon-chai": "^2.8.0",
        "webpack": "^1.12.4",
        "webpack-dev-server": "^1.12.1"
    },
    "babel": {
        "ignore": [
            "packages/babel-cli/src/babel-plugin/templates"
        ]
    },
    "devEngines": {
        "node": "4.x || 5.x",
        "npm": "2.x || 3.x"
    },
    "author": {
        "name": "KFlash",
        "email": "kflash123@gmail.com"
    },
    "bugs": "https://github.com/kflash/trolly/issues",
    "homepage": "https://github.com/kflash/trolly",
    "license": "MIT",
    "dependencies": {
        "rimraf": "^2.4.3"
    }
}