{
    "name": "trolly",
    "version": "0.5.3",
    "distTag": "pre",
    "description": "A starter kit to get you up and running with a bunch of awesome new front-end technologies using Babel, Webpack, Mocha, Sinon-Chai, Karma, Coveralls, and ESLint without any framework dependencies.",
    "scripts": {
        "precommit": "npm test && npm run build",
        "clean": "rimraf dist",
        "build": "npm run clean && set NODE_ENV=production && webpack --config ./config/webpack/webpack.production.config.js --progress --profile --colors",
        "test": "npm run test:server && npm run test:browser",
        "test:server": "mocha --opts config/mocha.opts",
        "test:browser": "./node_modules/.bin/karma start --single-run",
        "watch:server": "npm run test:server -- --watch",
        "watch:browser": "./node_modules/.bin/karma start",
        "lint:source": "eslint ./src/**/*.js",
        "lint:common": "eslint ./test/**/*.common.js",
        "lint:server": "eslint ./test/**/*.server.js",
        "lint:browser": "eslint ./test/**/*.browser.js",		
        "package:purge": "rm -rf node_modules",
        "package:reinstall": "npm run package:purge && npm install",
        "package:updates": "./node_modules/.bin/ncu",
        "package:upgrade": "npm run package:updates -u",
        "dev-server": "node config/webpack/webpack.server.config"
    },
    "repository": "trolly",
    "keywords": [
        "Webpack",
        "workflow",
        "boilerplate",
        "test",
        "node",
        "karma",
        "mocha",
        "chai",
        "eslint",
        "isparta",
        "es2015",
        "webpack",
        "es6",
        "universal",
        "hot reloading",
        "isomorphic",
        "ES2015",
        "es6",
        "Babel",
        "Babel 6",
        "boilerplate",
        "scaffold",
        "template",
        "skeleton",
        "istanbul",
        "hot",
        "reload",
        "hmr",
        "sinon"
    ],
    "files": [
        "dist",
        "src"
    ],
    "devDependencies": {
        "babel-core": "^6.1.21",
        "babel-cli": "^6.1.18",
        "babel-loader": "^6.1.0",
        "babel-eslint": "^4.1.5",
        "babel-preset-stage-0": "^6.1.18",
        "babel-preset-es2015": "^6.1.18",
        "coveralls": "^2.11.4",
        "eslint": "^1.9.0",
        "karma": "^0.13.15",
        "karma-cli": "^0.1.1",
        "karma-mocha": "^0.2.1",
        "karma-phantomjs-launcher": "^0.2.1",
        "karma-sinon-chai": "^1.1.0",
        "karma-coverage": "^0.5.0",
        "karma-spec-reporter": "0.0.22",
        "karma-webpack": "^1.7.0",
        "mocha": "^2.3.3",
        "mocha-lcov-reporter": "^1.0.0",
        "npm-check-updates": "^2.4.2",
        "phantomjs": "^1.9.18",
        "phantomjs-polyfill": "0.0.1",
        "sinon-chai": "^2.8.0",
        "webpack": "^1.12.6",
        "webpack-dev-server": "^1.12.1"
    },
    "babel": {
        "ignore": [
            "packages/babel-cli/src/babel-plugin/templates"
        ]
    },
    "devEngines": {
        "node": ">=4.1 <6",
        "npm": ">=3.1 <5"
    },
    "author": {
        "name": "KFlash",
        "email": "kflash123@gmail.com"
    },
    "bugs": "https://github.com/kflash/trolly/issues",
    "homepage": "https://github.com/kflash/trolly",
    "license": "MIT",
    "dependencies": {
        "npmlog": "^2.0.0",
        "rimraf": "^2.4.3"
    }
}